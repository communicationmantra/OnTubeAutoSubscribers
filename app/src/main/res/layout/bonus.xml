<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_youtube"/>
        <TextView
            android:id="@+id/textview_xx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Your Bonus"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="3dp"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp">
        <com.you_tube.auto_subscribers.ExtraUtils.TextView_Lato
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/roun_rect_youtube_pad"
            android:text="Claim Bonus"
            android:textColor="@color/colorBackroundWhite"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>